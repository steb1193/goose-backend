# Пример конфигурации для горизонтального масштабирования
# Скопируйте этот файл в .env и настройте под ваше окружение

# === ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ===

# База данных PostgreSQL
GOOSE_DB_HOST=localhost
GOOSE_DB_PORT=5433
GOOSE_DB_NAME=goose_db
GOOSE_DB_USER=goose_user
GOOSE_DB_PASSWORD=goose_password

# Redis для кеширования и синхронизации между инстансами
GOOSE_REDIS_URL=redis://localhost:6379

# JWT секрет (ОБЯЗАТЕЛЬНО измените в продакшене!)
GOOSE_JWT_SECRET=supersecretkey_change_in_production

# === ОПЦИОНАЛЬНЫЕ ПЕРЕМЕННЫЕ ===

# Порт приложения (по умолчанию 3000)
# PORT=3000

# Имя инстанса для идентификации в логах
# HOSTNAME=backend-1

# Окружение
GOOSE_NODE_ENV=development

# Настройки игры
COOLDOWN_DURATION=30
ROUND_DURATION=60

# Префикс для Redis ключей
GOOSE_REDIS_KEY_PREFIX=goose:

# TTL для Redis ключей (секунды)
GOOSE_REDIS_TTL=3600

# === ПРИМЕРЫ ДЛЯ РАЗНЫХ ИНСТАНСОВ ===

# Инстанс 1:
# PORT=3001
# HOSTNAME=backend-1

# Инстанс 2:
# PORT=3002  
# HOSTNAME=backend-2

# Инстанс 3:
# PORT=3003
# HOSTNAME=backend-3

# === ПРИМЕРЫ ДЛЯ DOCKER ===

# Для Docker Compose:
# GOOSE_DB_HOST=postgres
# GOOSE_REDIS_URL=redis://redis:6379

# Для Kubernetes:
# GOOSE_DB_HOST=postgres-service
# GOOSE_REDIS_URL=redis://redis-service:6379
